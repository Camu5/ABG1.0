#!/bin/bash
#Coded by Camu5

#Check root
if ! [ $(id -u) = 0 ]; then 
	echo "You need to be root before start this installation!" 
	exit 1 
fi

#This makes the bash file useful for automatic execution. It is necesarry to be in the same folder than ".bashrc"
mv BASH /root/.BASH
mv PHILOSOPHY.txt /root/.PHILOSOPHY
mv PHILOSOPHY1.txt /root/.PHILOSOPHY1
mv PHILOSOPHY2.txt /root/.PHILOSOPHY2
mv PHILOSOPHY3.txt /root/.PHILOSOPHY3
mv PHILOSOPHY4.txt /root/.PHILOSOPHY4
mv PHILOSOPHY5.txt /root/.PHILOSOPHY5
mv PHILOSOPHY6.txt /root/.PHILOSOPHY6
mv PHILOSOPHY7.txt /root/.PHILOSOPHY7

#This adds the feature of auto-start
echo "bash .BASH" >> /root/.bashrc
